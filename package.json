{
  "name": "ts-module-template",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "clean": "npm run clean:lib && npm run clean:dist",
    "dev:ts": "npm run build:ts && npm run test:ts",
    "build:ts": "tsc -p tsconfig-ts.json",
    "test:ts": "jest --config jest-ts.config.js",
    "dev:lib": "npm run build:lib && npm run deploy:lib && npm run test:lib",
    "build:lib": "tsc -p tsconfig-lib.json",
    "deploy:lib": "node ./deploy/copy-mjs.js",
    "test:lib": "node --experimental-vm-modules ./node_modules/.bin/jest --config jest-lib.config.js",
    "clean:lib": "tsc --build --clean tsconfig-lib.json && node ./deploy/delete-lib.js",
    "dev:dist": "npm run build:dist && npm run bundle:dist",
    "build:dist": "tsc -p tsconfig-dist.json",
    "clean:dist": "tsc --build --clean tsconfig-dist.json",
    "bundle:dist": "node ./bundle.cjs"
  },
  "devDependencies": {
    "@types/jest": "^26.0.24",
    "del": "^6.0.0",
    "esbuild": "^0.12.15",
    "jest": "^27.0.6",
    "ts-jest": "^27.0.3",
    "typescript": "^4.3.5"
  },
  "files": [
    "dist",
    "lib",
    "types"
  ],
  "engines": {
    "node": ">=14.8.2 >=12.20.0"
  },
  "exports": {
    ".": "./dist/index.js",
    "./lib/*": "./lib/*.js"
  },
  "typesVersions": {
    "*": {
      ".": [
        "./types/index.d.ts"
      ],
      "es6": [
        "./types/index.d.ts"
      ]
    }
  }
}
